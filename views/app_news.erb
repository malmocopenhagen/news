<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=UnifrakturMaguntia|News+Cycle&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="styles.css">
    <title>Weather</title>
  </head>

  <div class="container mt-5">
   <h1><%= @location %></h1>
    <iframe
     width="400"
      height="300"
       frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
         &q=<%= @lat %>, <%= @long %>&zoom=6" allowfullscreen>
      </iframe>
    </div> 

    <div class="container mt-5">
      <h1><%=@curr_summ%>
      </h1>
      <h3>It is currently <%=@curr_temp%> degrees in <%=@location%></h3>
    </div>

    <div class="container mt-5">
      <h1>Weather Forecast
      </h1>
    </div>

    <div class="container mt-5">
    <table width="100%"">
    <th>Day</th>
    <th>Outlook</th>
    <th>Low</th>
    <th>High</th>
    <% i=0 %>
    <% for day in @forecast_array %>
    <div class="container mt-5">
    <tr>
      <td><%=Time.at(day["time"]).strftime("%a")%></td>
      <td><%=day["summary"]%></td>
      <td><%=day["temperatureLow"]%></td>
      <td><%=day["temperatureHigh"]%></td>
      </tr>
      </div>
      <% i=i+1 %>
    <%end%>
    </table>
    </div>

    <div class="container mt-5">
      <h1>Top Stories
      </h1>
    </div>

    <div class="container mt-5">
    <table width="100%">
    <th>Story</th>
    <% j=0 %>
    <% for story in @articles %>
    <div class="container mt-5">
    <tr>
      <td href="<%=story["url"]%>"><%=story["title"]%></td>
      </tr>
      </div>
      <% j=j+1 %>
    <%end%>
    </table>
    </div>

</html>